{% block subs %}
<div class="mt-3">
  <ul class="list-group">
    {% for s in subscribers %}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{ s.name }}
      <form hx-post="teacher/grade" hx-target=".list-group" class="d-flex align-items-center">
        <div class="me-2" style="width: 150px;">
          <select id="mark{{ loop.index }}" name="mark" class="form-select form-select-sm">
            {% set k = 30 %}
            {% for i in range(1, k) %}
            <option value="{{ i }}">{{ i }}</option>
            {% endfor %}
	    <input type="hidden" id="studentID" name="studentID" value="{{ s.id }}">
	    <input type="hidden" id="examID" name="examID" value="{{ examID }}">
          </select>
        </div>
        <button type="submit" class="btn btn-sm btn-primary">Submit</button>
      </form>
    </li>
    {% endfor %}
  </ul>
</div>
{% endblock %}
